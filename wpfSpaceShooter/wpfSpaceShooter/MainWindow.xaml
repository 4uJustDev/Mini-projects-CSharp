<Window x:Class="wpfSpaceShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfSpaceShooter"
        mc:Ignorable="d"
        Title="SpaceShooter" Height="615" Width="540">
    <Canvas x:Name="myCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="240" Canvas.Top="490"/>
        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White" Canvas.Top="10" Canvas.Left="10"/>
        <Label Name="bulletsText" Content="Bullets: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Canvas.Bottom="10" VerticalAlignment="Top" Canvas.Left="10"/>
        <Label Name="lvlText" Content="LvL 1" FontSize="24" FontWeight="Bold" Foreground="Green" Canvas.Left="237" Canvas.Top="13"/>
        <Label Name="damageText" Content="Damage: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Right="20" VerticalAlignment="Center" Canvas.Top="10"/>
    </Canvas>
</Window>
